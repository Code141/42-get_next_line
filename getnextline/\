#include <unistd.h>
#include "get_next_line.h"

t_list	*get_dial(int fd)
{
	t_file	*new;
	while (fd_dial)
	{
		if (fd_dial->id == fd)
			return (fd_dial->lines);
		else
			fd_dial = fd_dial->next;
	}
	new	= (t_file*)malloc(sizeof(*new));
	new->id = fd;
}

int	get_next_line(const int fd, char **line)
{
	int		ret;
	int		i;
	char	buf[BUFF_SIZE];

	ret = read(fd, buf, BUFF_SIZE);
	while (buf[i] > 0 && i < ret)
	{
		// concatene
		if (buf[i] == '\n')
		{
			// Store end
			break;
		}
		i++;
	}

	return (0);
}
